<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
      <h2 id="welcome-message">Loading...</h2>
        <div class="marquee-container">
        <h3 class="marquee-text">This concludes our Code Blossom 2nd Hackathon Project.</h3>
        </div>
        <form action="/logout" method="get">
         <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    <img src="https://raw.githubusercontent.com/xmaemaumeowx/cb_hackathon/Maureen/assets/images/artistry.png" alt="Artistry Logo">
    <p id="error"></p>
    
  </div>
  <script src="script.js"></script>
  <script>
    fetch('/current-user')
      .then(res => res.json())
      .then(data => {
        const messageElement = document.getElementById('welcome-message');
        if (data.user) {
          messageElement.textContent = `Welcome, ${data.user.email}!`;
        } else {
          messageElement.textContent = "Welcome, Guest!";
        }
      })
      .catch(err => {
        console.error('Error fetching user:', err);
        document.getElementById('welcome-message').textContent = "Error loading user.";
      });
  </script>
</body>
</html>




